<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/lijevi_motori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdfsdfsd"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/desni_motori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdfsdfsd"
        android:textSize="20sp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="50dp"/>

    <View
        android:id="@+id/trackpad_border"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/trackpad_border_circle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"></View>

    <View
        android:id="@+id/trackpad"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/trackpad_circle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"></View>




</RelativeLayout>
